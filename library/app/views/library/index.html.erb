<h1>圖書館管理系統</h1>
 <%= link_to "新增書本", new_library_path %>

  <table>
    <thead>
      <tr>
        <td>書名</td>
        <td>簡介</td>
        <td>作者姓名</td>
        <td>售價</td>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.introduction %></td>
        <td><%= library.actor %></td>
        <td><%= library.price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>